<script>
$(document).ready(function () {
$('#cantidadProducto').on('input',function () {
$.ajax({
data:{cantidadProducto:$('#cantidadProducto').val(),id_Producto:@Model.id_producto},
type: 'GET',
url: '@Url.Action("precioDeVenta", "producto")',
success: function (result) {
